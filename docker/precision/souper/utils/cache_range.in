my $num_running = 0;
my $opid = $$;

sub wait_for_one() {
    my $xpid = wait();
    die if $xpid == -1;
    $num_running--;
}

my $counter=0;
foreach my $opt (sort bylen keys %toprint) {
    $counter++;
    wait_for_one() unless $num_running < $NPROCS;
    die unless $num_running < $NPROCS;
    my $pid = fork();
    die unless $pid >= 0;
    go($opt, $counter) if $pid == 0;
    # make sure we're in the parent
    die unless $$ == $opid;
    $num_running++;
}

wait_for_one() while $num_running > 0;

print "\n\nDone.\n";
