sub llvm_known($) {
    (my $opt) = @_;
    (my $fh1, my $fn1) = File::Temp::tempfile();
    print $fh1 $opt;
    close $fh1;
    open INF, "$triager < $fn1 | $llvmas | $souper -print-range-at-return |" or die;
    my $known;
    while (my $line = <INF>) {
	chomp $line;
	if ($line =~ /known at return: (.*)$/) {
	    $known = $1;
	}
    }
    close INF;
    print $opt if not defined $known;
    return $known if defined $known;
    return "oops";
}

